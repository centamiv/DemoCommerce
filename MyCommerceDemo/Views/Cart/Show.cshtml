@model Dictionary<MyCommerceDemo.Models.Product, int>

<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area" style="background-image: url(@Url.Content($"~/Content/{Const.IdAziendaMaster}/banner_carrello.jpg")); background-repeat: no-repeat; background-size: cover; background-position: center center;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">Il tuo carrello</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- cart-main-area start -->
<div class="cart-main-area section-padding--lg bg--white">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 ol-lg-12">
                <form action="#">
                    <div class="table-content wnro__table table-responsive">
                        <table>
                            <thead>
                                <tr class="title-top">
                                    <th class="product-thumbnail">Immagine</th>
                                    <th class="product-name">Prodotto</th>
                                    <th class="product-price">Prezzo</th>
                                    <th class="product-quantity">Quantità</th>
                                    <th class="product-subtotal">Totale</th>
                                    <th class="product-remove">Rimuovi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="product-thumbnail"><a href="/product/detail/@item.Key.Id"><img src="images/product/sm-3/1.jpg" alt="product img"></a></td>
                                        <td class="product-name"><a href="/product/detail/@item.Key.Id">@item.Key.descrizionebrevearticolo</a></td>
                                        <td class="product-price"><span class="amount">@item.Key.DiscountPrice</span></td>
                                        <td class="product-quantity">@item.Value</td>
                                        <td class="product-subtotal">€ @(item.Key.DiscountPrice*item.Value)</td>
                                        <td class="product-remove"><a href="/cart/del/@item.Key.Id">X</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
                @if (Model.Count > 0)
                {
                    <div class="cartbox__btn">
                        <ul class="cart__btn__list d-flex flex-wrap flex-md-nowrap flex-lg-nowrap justify-content-between">
                            <li>@Html.ActionLink("Acquista", "Checkout", "Cart")</li>
                        </ul>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-6">
                <div class="cartbox__total__area">
                    <div class="cart__total__amount">
                        <span>Totale</span>
                        <span>€ @Model.Sum(item => item.Key.DiscountPrice * item.Value)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- cart-main-area end -->