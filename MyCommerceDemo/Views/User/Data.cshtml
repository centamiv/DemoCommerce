@model MyCommerceDemo.Database.CLIENTI

<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--6">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">I MIEI DATI</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- Start My Account Area -->
<section class="my_account_area pt--80 pb--55 bg--white">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <form method="post" action="/user/dataconfirm">
                    <div class="customer_details">
                        <h3>Dati del cliente</h3>
                        <div class="customar__field">
                                <div class="input_box">
                                    <label>Denominazione <span>*</span></label>
                                    <input type="text" id="nome" name="nome" value="@Model.contauno">
                                </div>
                            <div class="input_box">
                                <label>Ragione sociale</label>
                                <input type="text" id="ragsoc" name="ragsoc" value="@Model.denominazione">
                            </div>
                            <div class="input_box">
                                <label>Partita IVA</label>
                                <input type="text" id="piva" name="piva" value="@Model.PIVA">
                            </div>
                            <div class="input_box">
                                <label>Indirizzo <span>*</span></label>
                                <input type="text" id="indirizzo" name="indirizzo" value="@Model.indirizzolegale">
                            </div>
                            <div class="margin_between">
                                <div class="input_box space_between">
                                    <label>Comune <span>*</span></label>
                                    <input type="text" id="comune" name="comune" value="@Model.comunelegale">
                                </div>

                                <div class="input_box space_between">
                                    <label>CAP <span>*</span></label>
                                    <input type="text" id="cap" name="cap" value="@Model.caplegale">
                                </div>
                            </div>
                            <div class="margin_between">
                                <div class="input_box space_between">
                                    <label>Città <span>*</span></label>
                                    <input type="text" id="citta" name="citta" value="@Model.cittàlegale">
                                </div>

                                <div class="input_box space_between">
                                    <label>Provincia <span>*</span></label>
                                    <input type="text" id="sigla" name="sigla" value="@Model.siglalegale">
                                </div>
                            </div>
                            <div class="input_box">
                                <label>Telefono</label>
                                <input type="text" name="telefono" value="@Model.telefono1legale">
                            </div>
                            <div class="input_box">
                                <label>Email</label>
                                <input type="text" name="email" value="@Model.mailcontauno">
                            </div>

                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-success">Salva</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End My Account Area -->
